<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
      http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<supported-locale>nl</supported-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>fr</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>i18n.common.MessageResources</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

	<navigation-rule>
		<navigation-case>
			<from-outcome>taskListCreate</from-outcome>
			<to-view-id>/views/task.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>taskEdit</from-outcome>
			<to-view-id>/views/taskFormEdit.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>taskCreate</from-outcome>
			<to-view-id>/views/taskFormCreate.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>taskList</from-outcome>
			<to-view-id>/views/taskList.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/views/home.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
